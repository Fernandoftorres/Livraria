@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1" class="active"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/livraria1.jpg" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    <a asp-action="Index" asp-controller="Livro" class="btn btn-default">
                        Bem-vindo a livraria da cidade! Clique aqui e veja nossos livros
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/livraria2.jpg" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p style="color: black; background-color: white">
                    Aplicação feita usando o Visual Studio 2017 com framework .NET Core. Tecnologias envolvidas: MVC, Entity, Migrations, AutoMapper, MediatR.
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-md-3">
        <h2>Tecnologias:</h2>
        <ul>
            <li>ASP.NET Core MVC</li>
            <li>Migrations (Code First)</li>
            <li>AutoMapper</li>
            <li>MediatR</li>
            <li>DDD</li>
        </ul>
    </div>
    <div class="col-md-3">
        <h2>Funcionalidades</h2>
        <ul>
            <li><a asp-action="Index" asp-controller="Livro" >Listagem de livros</a></li>
            <li><a asp-action="Create" asp-controller="Livro" >Adicionar livro</a></li>
        </ul>
    </div>
    <div class="col-md-3">
        <h2>Não contempla</h2>
        <ul>
            <li>Funcionalidades de filtro e paginação de grids</li>
            <li>Autenticação e Permissionamentos</li>
        </ul>
    </div>
</div>
